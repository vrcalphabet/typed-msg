  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25.2.1",
    "typedoc": "^0.28.16",
    "typescript": "^5.8.2",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  }
}
